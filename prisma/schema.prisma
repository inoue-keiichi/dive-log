generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiveLog {
  id                Int       @default(autoincrement())
  userId            String    
  date              String
  place             String?
  point             String?
  divingStartTime   String?
  divingEndTime     String?
  averageDepth      Float?
  maxDepth          Float?
  tankStartPressure Int?
  tankEndPressure   Int?
  tankKind          TankKind?
  suit              Suit?
  weight            Float?
  weather           Weather?
  temprature        Float?
  waterTemprature   Float? 
  transparency      Float?
  memo              String?



  @@id(fields: [id, userId], name: "dive_log_identifier")
  @@map("dive_logs")
}

enum TankKind{
  STEEL
  ALUMINUM
}

enum Suit{
  WET
  DRY
}

enum Weather{
  SUNNY
  SUNNY_CLOUDY
  CLOUDY
  RAINY
  SNOWY
}

